{
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono, 'JetBrains Mono Light'",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    // Editor
    "editor.minimap.enabled": false,
    "editor.lineHeight": 1.2,
    "editor.formatOnSave": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.autoSave": "afterDelay",
    "editor.rulers": [
        80
    ],
    "[r]": {
        "editor.formatOnSave": true
    },
    // Terminal
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "block",
    "terminal.integrated.env.linux": {
        "HOME": "/home/ats"
    },
    // Theme
    "workbench.colorTheme": "Pop Dark",
    "debug.console.fontSize": 16,
    "extensions.ignoreRecommendations": true,
    // R
    "r.alwaysUseActiveTerminal": false,
    "r.rpath.linux": "/usr/local/bin/R",
    "r.rterm.linux": "/usr/local/bin/R",
    "r.libPaths": [
        "C:/Users/TsyplenkovA/AppData/Local/R/win-library/4.5",
        "/home/ats/R/x86_64-pc-linux-gnu-library/4.5"
    ],
    "r.plot.useHttpgd": true,
    "r.removeLeadingComments": true,
    "r.sessionWatcher": true,
    "r.lsp.enabled": true,
    "r.lsp.args": [
        "--no-save",
        "--no-restore"
    ],
    // Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // TODO Highlight
    "todohighlight.keywords": [
        {
            "text": "!NB:",
            "color": "black",
            "backgroundColor": "#a28ae5",
            "overviewRulerColor": "#a28ae5",
            "isWholeLine": false
        }
    ],
    "quarto.render.previewType": "external",
    "update.mode": "none",
     "remote.SSH.remotePlatform": {
        "hydrowiki": "linux"
    },
}