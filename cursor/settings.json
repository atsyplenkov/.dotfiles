{
    "editor.fontFamily": "JetBrainsMonoNL Nerd Font Mono, 'JetBrains Mono Light'",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.renderWhitespace": "all",
    // Editor
    "editor.minimap.enabled": false,
    "editor.lineHeight": 1.2,
    "editor.formatOnSave": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.autoSave": "afterDelay",
    "editor.rulers": [
        80
    ],
    "[r]": {
        "editor.formatOnSave": true
    },
    // Terminal
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorStyleInactive": "block",
    // Cursor IDE Fix
    "window.commandCenter": true,
    "workbench.activityBar.orientation": "vertical",
    // Theme
    "workbench.colorTheme": "Pop Dark",
    "debug.console.fontSize": 16,
    "extensions.ignoreRecommendations": true,
    "r.alwaysUseActiveTerminal": true,
    "r.libPaths": [
        "C:/Users/TsyplenkovA/AppData/Local/R/win-library/4.5"
    ],
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // TODO Highlight
    "todohighlight.keywords": [
        {
            "text": "!NB:",
            "color": "black",
            "backgroundColor": "#a28ae5",
            "overviewRulerColor": "#a28ae5",
            "isWholeLine": false
        }
    ],
    "cursor.cpp.disabledLanguages": [
        "plaintext"
    ],
}